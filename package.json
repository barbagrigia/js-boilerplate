{
  "name": "js-boilerplate",
  "version": "1.0.0",
  "description": "Blahblah",
  "keywords": [],
  "author": "Maxime Thirouin",
  "license": "MIT",
  "repository": "https://github.com/MoOx/js-boilerplate.git",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "!**/__tests__"
  ],
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^6.0.0-beta.0",
    "babel-plugin-flow-react-proptypes": "^0.2.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-1": "^6.3.13",
    "coveralls": "^2.11.8",
    "eslint": "^2.0.0",
    "eslint-config-i-am-meticulous": "^4.0.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-ava": "^1.3.0",
    "eslint-plugin-flow-vars": "^0.2.1",
    "eslint-plugin-react": "^4.0.0",
    "expect": "^1.13.4",
    "expect-jsx": "^2.2.1",
    "flow-bin": "^0.22.1",
    "flow-interfaces": "^0.5.0",
    "npmpub": "^3.0.0",
    "nyc": "^6.1.1",
    "react": "^15.0.0-rc.1",
    "react-addons-test-utils": "^15.0.0-rc.1",
    "react-dom": "^15.0.0-rc.1"
  },
  "scripts": {
    "transpile": "babel --ignore __tests__ --copy-files src --out-dir lib",
    "prepublish": "rimraf lib && npm -s run transpile",
    "lint:js:eslint": "eslint --ignore-path .gitignore --fix .",
    "lint:js:flow": "flow src",
    "lint:js": "npm -s run lint:js:eslint && npm -s run lint:js:flow",
    "lint": "npm -s run lint:js",
    "pretest": "npm -s run lint",
    "test": "ava",
    "test-with-coverage": "nyc npm run test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "npmpub"
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/flow",
      "eslint-config-i-am-meticulous/react",
      "eslint-config-i-am-meticulous/ava"
    ]
  },
  "ava": {
    "files": [
      "src/**/__tests__/*.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "**/__tests__/**"
    ],
    "include": [
      "src/**"
    ]
  }
}
